<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gudang.controller.EditCustomerController"
      spacing="10" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Edit Customer" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtIdCustomer" GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false"/>

        <Label text="Nama:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNamaCustomer" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtEmail" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Telepon:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTelepon" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <Button fx:id="btnUpdate" text="Update" prefWidth="100"/>
</VBox>
